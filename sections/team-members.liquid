<div class="page-width">
    {% if section.settings.title != blank %}
        <div class="section-header text-center">
            <h2>{{ section.settings.title | escape }}</h2>
        </div>
    {% endif %}

    <div class="grid grid--2-col">
        {% for member in section.blocks %}
            <div class="grid__item">
                {% if member.settings.photo %}
                    {{ member.settings.photo | img_url: '300x' | img_tag }}
                {% endif %}
                <h3>{{ member.settings.name }}</h3>
                <span>{{ member.settings.title }}</span>
                <p>{{ member.settings.bio }}</p>
            </div>
        {% endfor %}
    </div>  
</div>

{% schema %}
{
  "name": "Team Members",
  "class": "team-members-section",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Section Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "name": "Team Member",
      "type": "staff-profile",
      "settings": [
        {
          "id": "photo",
          "type": "image_picker",
          "label": "Photo"
        },
        {
          "id": "name",
          "type": "text",
          "label": "Name"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Job Title"
        },
        {
          "id": "bio",
          "type": "textarea",
          "label": "Bio"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Store Information",
      "name": "Team Members"
    }
  ]
}
{% endschema %}

